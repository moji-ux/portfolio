                            | I experience the problem,
                            br
                            del find
                            |  
                            i design
                            |  the solution that lies within it.

        // Portfolio Section
        section#portfolio.page-section.portfolio
            .container
                // Portfolio Section Heading
                h2.page-section-heading.text-center.text-secondary.mb-0 Selected Works
                // Icon Divider
                .divider-custom
                    .divider-custom-line
                    .divider-custom-icon
                        i.fas.fa-microscope
                    .divider-custom-line
                // Portfolio Grid Items
                each num, portfolio in portfoliosSoon
                    .row.justify-content-center.mb-4
                            .portfolio-item.mx-auto.no-click
                                .portfolio-item-caption.d-flex.align-items-center.justify-content-center.h-100.w-100
                                    .portfolio-item-caption-content.text-center.text-white
                                        | #{portfolio}
                                        br
                                        | Coming soon
                                .row.mb-2
                                    h2 #{portfolio}
                                    .col
                                        img.img-fluid(src='assets/img/portfolio/'+portfolio+"/"+(num[3] || 'cover.png'), alt=portfolio+'-cover')
                each num, portfolio in portfolios
                    .row.justify-content-center.mb-4
                        .portfolio-item.mx-auto(data-bs-toggle='modal', data-bs-target='#'+portfolio+'Modal')
                            .portfolio-item-caption.d-flex.align-items-center.justify-content-center.h-100.w-100
                                .portfolio-item-caption-content.text-center.text-white
                                    | #{portfolio}
                            .row.mb-2
                                h2 #{portfolio}
                                if num[0]
                                    .col
                                        img.img-fluid(src='assets/img/portfolio/'+portfolio+"/"+(num[3] || 'cover.png'), alt=portfolio+'-cover')
                                else
                                    .col-8
                                        img.img-fluid(src='assets/img/portfolio/'+portfolio+"/"+(num[3] || 'cover.png'), alt=portfolio+'-cover')
                                    .col-4
                                        img.img-fluid(src='assets/img/portfolio/'+portfolio+'/1.png', alt=portfolio+'-1')
                                        img.img-fluid(src='assets/img/portfolio/'+portfolio+'/2.png', alt=portfolio+'-2')
                                        img.img-fluid(src='assets/img/portfolio/'+portfolio+'/3.png', alt=portfolio+'-3')

        // About Section
        section#about.page-section
            .container
                // About Section Heading
                h2.page-section-heading.text-center.text-secondary.mb-0 About
                // Icon Divider
                .divider-custom
                    .divider-custom-line
                    .divider-custom-icon
                        i.fas.fa-face-smile-beam
                    .divider-custom-line
                // About Section Content
                .row
                    .col-lg-4.ms-auto.avatar-div
                        img(src='assets/img/MozhdehBarzi.jpg', alt='Mozhdeh Barzi Profile photo')
