                //-         i.fas.fa-download.me-2
                //-         | CV/Resume
        // Footer
        footer.footer.text-center.bg-primary
            .container
                .row
                    // Footer Location
                    .col-lg-4.mb-5.mb-lg-0
                        h4.text-uppercase.mb-4 Location
                        p.lead.mb-0
                            | Japan, Tokyo
                    // Footer Social Icons
                    .col-lg-4
                        include includes/contact.pug
                        

        // Copyright Section
        div.copyright.bg-primary.text-center.text-white
            .container
                small Copyright &copy; Mozhdeh Barzi 2022

        // Portfolio Modals
        include includes/portfolio.pug
        include includes/portfolioPass.pug
        each num, portfolio in portfolios
            if num[0]
                +portfolioPass(portfolio,num)
            else
                +portfolio(portfolio,num)
        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script var portfolios = !{JSON.stringify(portfolios)};
        script(src='js/scripts.js')
